{
  "name": "unimark-app",
  "productName": "UniMark",
  "description": "Unicode Markdown Converter - Desktop app",
  "author": "Sten Hougaard",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp unimark.html dist/",
    "preview": "vite preview",
    "electron:build": "node build-electron.mjs",
    "electron:dev": "npm run build && npm run electron:build && ELECTRON_RUN_AS_NODE= electron .",
    "electron:package": "electron-builder",
    "release": "gh workflow run release.yml -f version="
  },
  "main": "dist-electron/main.cjs",
  "build": {
    "appId": "com.stenhougaard.unimark",
    "productName": "UniMark",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3",
    "vite": "^6.2.0"
  }
}
